@model IEnumerable<TiendaRepuestosAuto_BD1_WEB.Models.Organizacion>

@{
    ViewBag.Title = "Index";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Crear nueva organización", "Create")
</p>

<p>
    @using (Html.BeginForm("Index", "Organizacion", FormMethod.Get))
    {
        <style>
            label {
                text-align: left;
                width: 150px;
                display: block;
                float: left;
                clear: right;
                font-size: 18;
            }
        </style>

        <b>Buscar personas</b><br /><br />
        <label for="Nombre"> Nombre: </label>
        <input type="text" id="Nombre" name="Nombre"><br>
        <label for="CedulaJuridica"> Cedula Juridica: </label>
        <input type="number" id="CedulaJuridica" name="CedulaJuridica"><br>
        <input type="submit" value="Buscar">
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Cédula jurídica")
        </th>
        <th>
            @Html.DisplayName("Nombre de Organización")
        </th>
        <th>
            @Html.DisplayName("Ciudad")
        </th>
        <th>
            @Html.DisplayName("Dirección")
        </th>
        <th>
            @Html.DisplayName("Estado")
        </th>
        <th>
            @Html.DisplayName("Contacto")
        </th>
        <th>
            @Html.DisplayName("Telefono")
        </th>
        <th>
            @Html.DisplayName("Cargo")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CedulaJuridica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Ciudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.EstadoDeCliente.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contacto.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contacto.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contacto.Cargo)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.CedulaJuridica }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.CedulaJuridica }) |
            @Html.ActionLink("Activar", "activarOrganizacion", new { id = item.Cliente.ID_Cliente }) |
            @Html.ActionLink("Desactivar", "desactivarOrganizacion", new { id = item.Cliente.ID_Cliente }) | 
            @Html.ActionLink("Suspender", "suspenderOrganizacion", new { id = item.CedulaJuridica })
        </td>
    </tr>
}

</table>
