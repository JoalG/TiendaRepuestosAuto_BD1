@model TiendaRepuestosAuto_BD1_WEB.Models.DataBaseModelForApp.personaModel

@{
    ViewBag.Title = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Persona</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ciudad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ciudad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Direccion)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Regresar a lista", "Index") |
    @Html.ActionLink("Modificar", "Edit", new { id = Model.Cedula }) |
    @Html.ActionLink("Agregar Telefono", "Create", new { controller = "Telefonoes", Cedula = Model.Cedula, nombre = Model.nombre })
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Números de telfono")
        </th>
    </tr>

    @foreach (var item in Model.telefonos)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDeTelefono)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { controller = "Telefonoes", id = item.ID_Telefono, Nombre = Model.nombre })
            </td>
        </tr>
    }
</table>

