@model TiendaRepuestosAuto_BD1_WEB.Models.DataBaseModelForApp.ParteParaTipoDeAutomovilModel

@{
    ViewBag.Title = "AsociarConTipoDeAutomovil";
}

<h2>Asociar Parte con tipo de automovil</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Parte)
        <div class="form-group">
            @Html.LabelFor(model => model.ID_TipoDeAutomovil, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_TipoDeAutomovil", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_TipoDeAutomovil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_Parte, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.nombreParte, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombreParte, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

    if (ViewBag.Message != null)
    {
        bool result = ViewBag.Resultado;

        if (result)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
                window.location.href = "/Partes/Index"
            }
            </script>
        }
        else
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            }
            </script>
        }
    }

}

<div>
    @Html.ActionLink("Regresar", "Details", new { id = Model.ID_Parte })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
