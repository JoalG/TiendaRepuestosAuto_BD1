@model IEnumerable<TiendaRepuestosAuto_BD1_WEB.Models.Parte>

@{
    ViewBag.Title = "Index";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Crear nueva parte", "Create")
</p>

<p>
    @using (Html.BeginForm("Index", "Partes", FormMethod.Get))
    {
        <style>
            label {
                text-align: left;
                width: 100px;
                display: block;
                float: left;
                clear: right;
                font-size: 18;
            }
        </style>

        <b>Buscar parte</b><br /><br />
        <label for="ModeloFind"> Modelo: </label>
        <input type="text" id="ModeloFind" name="ModeloFind"><br>
        <label for="AnnoFind"> Año: </label>
        <input type="number" id="AnnoFind" name="AnnoFind"><br>
        <input type="submit" value="Buscar">
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Marca")
        </th>
        <th>
            @Html.DisplayName("Fabricante")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FabricanteDePiezas.Nombre)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id = item.ID_Parte }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.ID_Parte }) |
            @Html.ActionLink("Asociar con Tipo De Automovil", "AsociarConTipoDeAutomovil", new { id = item.ID_Parte })
        </td>
    </tr>
}

</table>
